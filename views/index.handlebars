<div class = "container"><br><br>
<h1>Eat-Da-Burger</h1>

<p>Enter a burger to eat</p>

<!-- Pass in data from server.js -->
<ul>
  {{#each burger}}
  	<li>
  		<p><span class="label">ID:</span> {{this.id}}</p>
      <p><span class="label">Quote:</span> {{this.burger_name}}</p>

      <button data-id="{{this.id}}" class="devquote">Devour!</button>

  	</li>
  {{/each}}
</ul>

<h2>Add a Burger</h2>

<form class="create-form">

  <div class="form-group">
    <label for="auth">Burger Name:</label>
    <input type="text" id="auth" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>

