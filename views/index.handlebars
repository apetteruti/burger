
<div class="container"><br><br>
  <div class="section">

    <h1>Eat-Da-Burger</h1>

    <p>Enter a burger to eat</p>

    <div class="row">
      <div class="d-flex justify-content-center">
        <div class="col-md-6">

          <!-- Pass in data from server.js -->
          <ul>
            {{#each burger}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}

            {{/unless}}
            {{/each}}
          </ul>
        </div>
      
    
    <div class="col-md-6">
      <ul>
        {{#each burger}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/if}}
        {{/each}}

      </ul>
    </div>
  </div>
</div>
</div>

<h2>Add a Burger</h2>

<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="burger_name">
  </div>

  <button type="submit" id="burg">Add Burger</button>
</form>
</div>
</div>


