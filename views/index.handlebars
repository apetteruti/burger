
<div class="container"><br><br>
  <div class="section">
<div class="side-crop">
    <img id = "image" src = "https://i.pinimg.com/736x/6a/fa/32/6afa327c78d587e72f73b45843ef181e--bobs-burgers-bob-s.jpg">
    </div>
    <hr>
    <h1 id = "center">Consume a Hamburger</h1>

    <h2 id = "center">Enter a burger to eat</h2>
    <br>

    <div class="row" id = "row">
    
        <div class="col-py-3 px-md-5">

          <!-- Pass in data from server.js -->
          <ul>
            {{#each burger}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}

            {{/unless}}
            {{/each}}
          </ul>
        </div>
      
    
    <div class="col-py-3 px-md-5">
      <ul>
        {{#each burger}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/if}}
        {{/each}}

      </ul>
    </div>
  </div>

</div>
<hr>

<h3>Add a Burger</h3>

<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="burger_name">
  </div>

  <button type="submit" id="burg">Add Burger</button>
</form><br>
</div>
</div>


