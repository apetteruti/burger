<div class="container"><br><br>
  <div class="section">

    <h1>Eat-Da-Burger</h1>

    <p>Enter a burger to eat</p>

    <div class="row">
      <div class="d-flex justify-content-center">
        <div class="col-md-6">

          <!-- Pass in data from server.js -->
          <ul>
            {{#each burger}}
            {{#unless devoured}}
            <li>
              <p><span class="label">ID: </span> {{this.id}}<span class="label">Burger:</span> {{this.burger_name}}

              <span><button data-id="{{this.id}}" class="change-dev" data-newdevour = "{{devoured}}">
                Devour!</button></span>

                {{this.devoured=true}}

            </li>
            {{/unless}}
            {{/each}}
          </ul>
        </div>
      
    

    <div class="col-md-6">
      <ul>
        {{#each burger}}
        {{#if devoured}}
        <li>
          <p><span class="label">ID: </span> {{this.id}}<span class="label">Burger:</span> {{this.burger_name}}

         <span><button data-id="{{this.id}}" class="change-dev" data-newdevour = "{{devoured}}">
         </button>>Devour!</button></span>
        {{this.devoured=false}}

        </li>
        {{/if}}
        {{/each}}

      </ul>
    </div>
  </div>
</div>
</div>

<h2>Add a Burger</h2>

<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="burger_name">
  </div>

  <button type="submit" id="burg">Add Burger</button>
</form>
</div>
</div>

